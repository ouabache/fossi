always@(posedge clk)
  if(reset)
    begin
      addr          <=  24'h0000;
      wdata         <=  16'h0000;
      wr            <=  1'b0;
      rd            <=  1'b0;
      cs            <=  2'b00;
      ub            <=  1'b0;
      lb            <=  1'b0;
      exp_rdata     <=  16'h0000;
      mask_rdata    <=  16'h0000;       
   end

